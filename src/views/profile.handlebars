<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Perfil de usuario: <span class="text-info-emphasis">{{username}}</span>
                        </h1>
                    </div>
                    <div class="card-body">
                        <p><strong>Nombre:</strong> {{name}}</p>
                        <p><strong>Apellido:</strong> {{lastname}}</p>
                        <p><strong>Email:</strong> {{email}}</p>
                        <p><strong>Edad:</strong> {{age}}</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <div class="d-flex justify-content-start">
                            <button class="btn btn-primary me-1" onclick="productsList()">Products</button>
                            <button id="cartButton" class="btn btn-warning" cart="{{cart}}"
                                onclick='cart(event)'>Cart</button>
                        </div>
                        <button class=" btn btn-danger" onclick="logout()">Desconectar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function logout() {

            //POST
            fetch('/api/sessions/logout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
                .then(response => {
                    if (response.status === 200) {
                        window.location.href = './login';
                    } else {
                        console.error('Error al cerrar sesiÃ³n');
                    }
                })
                .catch(error => {
                    console.error('Error inesperado:', error);
                });
        }

        function cart(event) {
            const id = event.target.getAttribute('cart');
            window.location.href = `/api/carts/${id}`
        }

        function productsList() {
            window.location.href = "/api/products/list";
        }
    </script>
</body>

</html>